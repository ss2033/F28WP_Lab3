<%- include('header'); -%>
    <div class="register">
        <h1>Register to Webstore</h1>
        <form action="/api/register" method="POST">
            Username: <input type="text" name="username" required> <br>
            Password: <input type="password" name="password" required> <br>
            Society: <input type="text" name="society" id="society" required> <br>
            Contact: <input type="text" name="contact" id="contact" required> <br>
            Address: <input type="text" name="addres" id="addres" required> <br>
            Zipcode: <input type="text" name="zipcode" id="zipcode" required> <br>
            City: <input type="text" name="city" id="city" required> <br>
            Phone: <input type="text" name="phone" id="phone" required> <br>
            FAX: <input type="text" name="fax" id="fax" required> <br>
            Max-outstanding: <input type="text" name="max_outstanding" id="max_outstanding" required> <br><br>
            <button type="submit">Register</button>
        </form>
    </div>
<%- include('footer'); -%>